<!DOCTYPE html>
<html lang="tr">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Şifreleme Uygulaması</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <style>
    body {
      background: linear-gradient(to right, #6a11cb, #2575fc);
      font-family: 'Arial', sans-serif;
    }

    .container {
      background-color: #ffffff;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-control, .btn {
      border-radius: 10px;
    }

    .btn-lg {
      padding: 12px 20px;
    }

    .btn-primary {
      background-color: #6a11cb;
      border: none;
    }

    .btn-primary:hover {
      background-color: #4a0d9b;
    }

    .btn-secondary {
      background-color: #f2c94c;
      border: none;
    }

    .btn-secondary:hover {
      background-color: #f1b12f;
    }

    .btn-success {
      background-color: #27ae60;
      border: none;
    }

    .btn-success:hover {
      background-color: #219150;
    }

    .btn-warning {
      background-color: #e67e22;
      border: none;
    }

    .btn-warning:hover {
      background-color: #d35400;
    }

    .form-label {
      font-weight: bold;
      color: #333;
    }

    #resultText {
      background-color: #f7f7f7;
      color: #555;
    }

    #decodedImage {
      max-height: 300px;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">

        <!-- Başlık -->
        <h2 class="text-center mb-4">Şifreleme Uygulaması</h2>

        <!-- Metin Girişi -->
        <div class="mb-3">
          <label for="inputText" class="form-label">Metni Giriniz</label>
          <input type="text" class="form-control form-control-lg" id="inputText" placeholder="Metninizi buraya yazın">
        </div>

        <!-- Resim Yükleme -->
        <div class="mb-3">
          <label for="imageInput" class="form-label">Resim Yükleyin</label>
          <input type="file" class="form-control form-control-lg" id="imageInput" accept="image/*">
        </div>

        <!-- Metin Şifreleme Butonları -->
        <div class="d-grid gap-2 mb-3">
          <button class="btn btn-primary btn-lg" id="encryptButton">Şifrele</button>
          <button class="btn btn-secondary btn-lg" id="decryptButton">Şifreyi Çöz</button>
        </div>

        <!-- Resim Şifreleme Butonları -->
        <div class="d-grid gap-2 mb-3">
          <button class="btn btn-success btn-lg" id="imageEncryptButton">Resim Şifrele</button>
          <button class="btn btn-warning btn-lg" id="imageDecryptButton">Resim Çöz</button>
        </div>

        <!-- Sonuç Kutusu -->
        <div class="mb-3">
          <label for="resultText" class="form-label">Sonuç</label>
          <input type="text" class="form-control form-control-lg" id="resultText" readonly placeholder="Sonuç buraya gelecek">
        </div>

        <!-- Kopyala Butonu -->
        <div class="d-grid gap-2 mb-3">
          <button class="btn btn-success btn-lg" id="copyButton">Sonucu Kopyala</button>
        </div>

        <!-- Çözülen Resmi Göster -->
        <div class="text-center mt-4">
          <img id="decodedImage" src="" alt="Çözülen Resim" class="img-fluid rounded shadow d-block mx-auto" style="display: none;">
        </div>

      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/javascripts/index.js"></script>
</body>
</html>
